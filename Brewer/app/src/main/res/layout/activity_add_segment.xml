<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AddSegmentActivity"
    android:id="@+id/add_segment_activity">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/set_duration_textbox"
        android:layout_alignBaseline="@+id/set_temp_textbox"
        android:layout_alignBottom="@+id/set_temp_textbox"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/set_temp_textbox"
        android:layout_below="@+id/thermometer"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/thermometer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/thermometer"
        android:layout_marginStart="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/clock"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/clock"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/set_duration_textbox"
        android:layout_marginStart="44dp" />
</RelativeLayout>
