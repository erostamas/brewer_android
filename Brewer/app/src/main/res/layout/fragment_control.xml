<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="erostamas.brewer.ControlFragment">

    <!-- TODO: Update blank fragment layout -->

    <erostamas.brewer.Views.TemperatureGauge
        xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
        android:id="@+id/current_temp"
        customNS:name="TEMP"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <erostamas.brewer.Views.TemperatureGauge
        xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
        android:id="@+id/setpoint"
        customNS:name="SP"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_temp"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <TextView
        android:id="@+id/current_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setpoint"
        android:text="MODE: ######"
        android:textColor="@android:color/background_light" />

    <ImageButton
        android:id="@+id/increase_setpoint_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/setpoint"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/setpoint"
        android:background="@null"
        android:src="@mipmap/increase" />

    <ImageButton
        android:id="@+id/decrease_setpoint_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/decrease"
        android:background="@null"
        android:layout_below="@+id/increase_setpoint_button"
        android:layout_toRightOf="@+id/setpoint"/>


</RelativeLayout>
