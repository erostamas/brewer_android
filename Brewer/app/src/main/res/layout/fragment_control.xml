<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context="erostamas.brewer.ControlFragment">

    <!-- TODO: Update blank fragment layout -->

    <erostamas.brewer.Views.Gauge
        xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
        android:id="@+id/current_temp"
        customNS:name="TEMP"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <erostamas.brewer.Views.Gauge
        xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
        android:id="@+id/setpoint"
        customNS:name="SP"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/current_temp"
        android:layout_centerHorizontal="true"
        android:inputType="number"/>

    <ImageButton
        android:id="@+id/increase_setpoint_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/setpoint"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/setpoint"
        android:background="@null"
        android:src="@mipmap/increase" />

    <ImageButton
        android:id="@+id/decrease_setpoint_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@mipmap/decrease"
        android:background="@null"
        android:layout_below="@+id/increase_setpoint_button"
        android:layout_toRightOf="@+id/setpoint"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/setpoint"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        <erostamas.brewer.Views.DataDisplay xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
            android:id="@+id/current_mode"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            customNS:name="MODE"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:background="?attr/colorPrimary"/>

        <erostamas.brewer.Views.DataDisplay xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
            android:id="@+id/current_output"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            customNS:name="OUTPUT"
            customNS:unit="%"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:background="?attr/colorPrimary"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <erostamas.brewer.Views.DataDisplay xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
                android:id="@+id/next_setpoint"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                customNS:name="NEXT SP"
                customNS:unit="Â°C"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:background="?attr/colorPrimary"/>

            <erostamas.brewer.Views.DataDisplay xmlns:customNS="http://schemas.android.com/apk/res/erostamas.brewer"
                android:id="@+id/time_to_next_segment"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                customNS:name="TIME TO NEXT SP"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:background="?attr/colorPrimary"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>
